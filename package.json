{
  "name": "the-adaptive-alchemist",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "pnpm check:astro --watch & pnpm dev",
    "dev": "astro dev",
    "build": "astro build",
    "postbuild": "pnpm run generate:llms-txt",
    "preview": "astro preview",
    "check:astro": "astro check",
    "check:tinybird": "cd tinybird && tb --cloud deployment create --check",
    "check": "pnpm check:astro && pnpm check:tinybird",
    "predeploy": "pnpm build",
    "deploy": "gh-pages -d dist",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "lint:md": "markdownlint .",
    "lint:md:fix": "markdownlint --fix .",
    "lint:format": "prettier --check",
    "lint:format:fix": "prettier --write",
    "lint:format:src": "prettier --check '{src,scripts}/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:format:src:fix": "prettier --write '{src,scripts}/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:format:supabase": "prettier --check supabase/functions",
    "lint:format:supabase:fix": "prettier --write supabase/functions",
    "lint:format:css": "prettier --check 'src/**/*.{css,astro}'",
    "lint:format:css:fix": "prettier --write 'src/**/*.{css,astro}'",
    "lint:code": "eslint",
    "lint:code:fix": "eslint --fix",
    "lint:code:src": "eslint src scripts",
    "lint:code:src:fix": "eslint --fix src scripts",
    "lint:code:supabase": "eslint supabase/functions",
    "lint:code:supabase:fix": "eslint --fix supabase/functions",
    "lint:styles": "stylelint 'src/**/*.{css,astro}'",
    "lint:styles:fix": "stylelint 'src/**/*.{css,astro}' --fix",
    "lint": "pnpm run lint:format:src && pnpm run lint:format:supabase && pnpm run lint:format:css && pnpm run lint:code:src && pnpm run lint:code:supabase && pnpm run lint:styles && pnpm run lint:md",
    "lint:fix": "pnpm run lint:format:src:fix && pnpm run lint:format:supabase:fix && pnpm run lint:format:css:fix && pnpm run lint:code:src:fix && pnpm run lint:code:supabase:fix && pnpm run lint:styles:fix && pnpm run lint:md:fix",
    "test:tinybird": "cd tinybird && tb test run",
    "build:tinybird": "cd tinybird && tb build",
    "generate:llms-txt": "dotenv -- tsx scripts/generate-llms-txt.ts",
    "send-newsletter": "dotenv -- tsx scripts/send-newsletter.ts"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/node": "9.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/vite": "^4.1.10",
    "@types/mdast": "^4.0.4",
    "analytics": "^0.8.16",
    "analytics-plugin-do-not-track": "^0.1.5",
    "astro": "5.12.3",
    "astro-seo": "^0.8.4",
    "countries-and-timezones": "^3.8.0",
    "dotenv-cli": "^8.0.0",
    "framer-motion": "12.6.3",
    "gray-matter": "^4.0.3",
    "html-escaper": "^3.0.3",
    "markdown-it": "^14.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hotkeys-hook": "4.6.1",
    "react-icons": "5.5.0",
    "reading-time": "1.5.0",
    "sanitize-html": "2.15.0",
    "tailwindcss": "^4.1.10",
    "tinybird-analytics": "github:arielperez82/web-analytics#path:/client"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/html-escaper": "^3.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "24.0.3",
    "@types/slug": "^5.0.9",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "sharp": "0.34.2",
    "slug": "^11.0.0",
    "stylelint": "^16.20.0",
    "stylelint-config-alphabetical-order": "^1.0.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-prettier": "^5.0.3",
    "supabase": "^2.31.8",
    "tsx": "4.20.3",
    "turndown": "7.2.0",
    "typescript-eslint": "^8.34.1",
    "unist-util-visit": "^5.0.0",
    "web-vitals": "^5.0.3"
  }
}
