---
import { getCanonicalURL, getImageURL, siteConfig } from '@/config/site'

export interface Props {
  title: string
  description?: string
  canonicalURL?: string | URL
  openGraph?: {
    title?: string
    description?: string
    image?: string
    imageAlt?: string
    type?: 'website' | 'article'
    publishedTime?: string
    modifiedTime?: string
    author?: string
    tags?: string[]
  }
  twitter?: {
    card?: 'summary' | 'summary_large_image'
    site?: string
    creator?: string
  }
  noindex?: boolean
  nofollow?: boolean
  structuredData?: object
}

const {
  title,
  description,
  canonicalURL,
  openGraph = {},
  twitter = {},
  noindex = false,
  nofollow = false,
  structuredData
} = Astro.props

// Build canonical URL
const canonical = canonicalURL
  ? new URL(canonicalURL, siteConfig.url).href
  : getCanonicalURL(Astro.url.pathname)

// Open Graph defaults
const ogTitle = openGraph.title || title
const ogDescription =
  openGraph.description || description || siteConfig.description
const ogImage = openGraph.image
  ? getImageURL(openGraph.image)
  : getImageURL(siteConfig.defaultImage)
const ogType = openGraph.type || 'website'

// Twitter defaults
const twitterCard = twitter.card || 'summary_large_image'
const twitterSite = twitter.site || siteConfig.twitterHandle
const twitterCreator = twitter.creator || siteConfig.twitterHandle
---

<!-- Basic Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />

<!-- Favicon and Icon Meta Tags -->
<link
  rel="icon"
  type="image/svg+xml"
  href="/the-adaptive-alchemist-logo-transparent.svg"
/>
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="shortcut icon" href="/the-adaptive-alchemist-logo-transparent.svg" />
<link rel="manifest" href="/site.webmanifest" />
<meta
  name="msapplication-TileImage"
  content="/the-adaptive-alchemist-logo-transparent.png"
/>

<!-- SEO Meta Tags -->
<title>{title}</title>
<meta name="description" content={description || siteConfig.description} />
<link rel="canonical" href={canonical} />

<!-- Robots Meta Tags -->
{noindex && <meta name="robots" content="noindex" />}
{nofollow && <meta name="robots" content="nofollow" />}
{noindex && nofollow && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph Meta Tags -->
<meta property="og:site_name" content={siteConfig.title} />
<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={ogDescription} />
<meta property="og:url" content={canonical} />
<meta property="og:type" content={ogType} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:alt" content={openGraph.imageAlt || title} />
<meta property="og:locale" content="en_US" />

{
  openGraph.type === 'article' && (
    <>
      {openGraph.publishedTime && (
        <meta
          property="article:published_time"
          content={openGraph.publishedTime}
        />
      )}
      {openGraph.modifiedTime && (
        <meta
          property="article:modified_time"
          content={openGraph.modifiedTime}
        />
      )}
      {openGraph.author && (
        <meta property="article:author" content={openGraph.author} />
      )}
      {openGraph.tags &&
        openGraph.tags.map((tag) => (
          <meta property="article:tag" content={tag} />
        ))}
    </>
  )
}

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:site" content={twitterSite} />
<meta name="twitter:creator" content={twitterCreator} />
<meta name="twitter:title" content={ogTitle} />
<meta name="twitter:description" content={ogDescription} />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:image:alt" content={openGraph.imageAlt || title} />

<!-- Additional Meta Tags -->
<meta name="theme-color" content="#18181b" />
<meta name="msapplication-TileColor" content="#18181b" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta
  name="apple-mobile-web-app-status-bar-style"
  content="black-translucent"
/>

<!-- Structured Data -->
{
  structuredData && (
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
      is:inline
    />
  )
}

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://www.google-analytics.com" />
<link rel="preconnect" href="https://www.googletagmanager.com" />

