---
import { Image } from 'astro:assets'

import invertedLogo from '@/assets/the-adaptive-alchemist-logo-inverted-transparent.png'
import logo from '@/assets/the-adaptive-alchemist-logo-transparent.png'
import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts'

const currentYear = new Date().getFullYear()

// Define navigation links
const navLinks = [
  { text: 'About', href: '/about' },
  { text: 'Posts', href: '/posts' },
  { text: 'Topics', href: '/tags' },
  { text: 'RSS', href: '/rss.xml', target: '_blank' }
]

// Define social links
const socialLinks = [
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/arielxperez',
    icon: `<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>`
  },
  {
    name: 'Twitter',
    href: 'https://x.com/arielxperez',
    icon: `<path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>`
  },
  {
    name: 'GitHub',
    href: 'https://github.com/arielperez82',
    icon: `<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>`
  }
]
---

<footer
  class="relative mt-20 overflow-hidden border-t border-zinc-100 transition-all duration-300 dark:border-zinc-800"
>
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div
      class="absolute -right-40 -top-40 h-80 w-80 animate-float-slow rounded-full bg-zinc-100 opacity-50 blur-3xl transition-all duration-300 dark:bg-zinc-800/30"
    >
    </div>
    <div
      class="absolute -bottom-40 -left-40 h-80 w-80 animate-float-slow rounded-full bg-zinc-100 opacity-50 blur-3xl transition-all delay-2000 duration-300 dark:bg-zinc-800/30"
    >
    </div>
    <div
      class="absolute left-1/4 top-20 h-40 w-40 animate-float-slow rounded-full bg-zinc-200/50 opacity-30 blur-2xl transition-all delay-1000 duration-300 dark:bg-zinc-700/20"
    >
    </div>
  </div>

  <div class="relative px-4 pb-12 pt-16 sm:px-6">
    <div class="mx-auto max-w-4xl">
      <div class="grid grid-cols-4 gap-10">
        <div class="col-span-3">
          <a href="/" class="group inline-block">
            <div class="flex items-center">
              <div
                class="relative flex h-10 w-10 transform items-center justify-center overflow-hidden rounded-lg bg-gradient-to-br shadow-lg transition-transform group-hover:scale-105"
              >
                <span
                  class="text-xl font-bold transition-transform duration-300 group-hover:scale-110"
                >
                  <Image
                    src={logo}
                    alt="The Adaptive Alchemist logo"
                    width={40}
                    height={40}
                    data-theme="light"
                  />
                  <Image
                    src={invertedLogo}
                    alt="The Adaptive Alchemist logo"
                    width={40}
                    height={40}
                    class="hidden"
                    data-theme="dark"
                  />
                </span>
                <div
                  class="absolute inset-0 bg-gradient-to-br from-zinc-700 to-zinc-900 opacity-0 transition-opacity duration-300 dark:from-zinc-300 dark:to-zinc-100"
                >
                </div>
              </div>
              <span
                class="ml-3 text-xl font-bold text-zinc-900 transition-colors duration-300 dark:text-zinc-100"
              >
                {SITE_TITLE}
              </span>
            </div>
          </a>

          <p
            class="mt-4 text-sm leading-relaxed text-zinc-600 transition-colors duration-300 dark:text-zinc-400"
          >
            {SITE_DESCRIPTION}
          </p>

          <div class="mt-6 flex items-center space-x-4">
            {
              socialLinks.map((social) => (
                <a
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={social.name}
                  class="group relative flex h-10 w-10 transform items-center justify-center rounded-full bg-zinc-100 text-zinc-500 transition-all duration-300 hover:-translate-y-1 hover:text-zinc-900 hover:ring-2 hover:ring-zinc-300 dark:bg-zinc-800 dark:text-zinc-400 dark:hover:text-zinc-100 dark:hover:ring-zinc-700"
                  data-track
                >
                  <span class="absolute inset-0 rounded-full bg-gradient-to-br from-zinc-200 to-zinc-300 opacity-0 transition-opacity duration-300 group-hover:opacity-100 dark:from-zinc-700 dark:to-zinc-600" />
                  <svg
                    class="relative z-10 h-5 w-5 transition-transform duration-300 group-hover:scale-110"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <Fragment set:html={social.icon} />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>

        <div class="col-span-1">
          <h3
            class="relative inline-block pb-2 text-sm font-semibold uppercase tracking-wider text-zinc-900 transition-colors duration-300 after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-8 after:bg-zinc-300 after:content-[''] dark:text-zinc-100 dark:after:bg-zinc-700"
          >
            Navigation
          </h3>
          <ul class="mt-4 space-y-3">
            {
              navLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="group flex items-center text-base text-zinc-600 transition-colors hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-zinc-100"
                    target={link.target ? '_blank' : undefined}
                  >
                    <span class="relative inline-block overflow-hidden">
                      <span class="relative z-10">{link.text}</span>
                      <span class="absolute bottom-0 left-0 h-0.5 w-0 bg-zinc-800 transition-all duration-300 group-hover:w-full dark:bg-zinc-200" />
                    </span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <div
        class="mt-12 border-t border-zinc-200 pt-8 transition-all duration-300 dark:border-zinc-800"
      >
        <div
          class="flex flex-col items-center justify-between gap-4 md:flex-row"
        >
          <p
            class="text-sm text-zinc-600 transition-colors duration-300 dark:text-zinc-400"
          >
            &copy; {currentYear} All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
