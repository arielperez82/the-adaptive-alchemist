{
  "stylelint.validate": [
    // other file extensions...
    "astro"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact"
  ],
  "css.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.fixAll.markdownlint": true,
    "source.fixAll.prettier": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
